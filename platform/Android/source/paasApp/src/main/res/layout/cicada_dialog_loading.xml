<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cicada_loading_width"
    android:layout_height="@dimen/cicada_loading_height"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_pbar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="@dimen/cicada_loading_pbar_height"
        android:layout_height="@dimen/cicada_loading_pbar_height"
        android:indeterminateDrawable="@drawable/loading_rotate" />

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/net_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="23KB"
            android:textColor="@color/cicada_white"
            android:textSize="@dimen/cicada_loading_font_size" />
    </LinearLayout>


</LinearLayout>